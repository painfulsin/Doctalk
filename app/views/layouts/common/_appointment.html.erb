<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">Take Appointment</h4>
    </div>

    <%= form_tag search_appointment_path , :class =>"form-horizontal", :id =>"search_appointment", :method=> :post, authenticity_token: true  do |f| %>

    <div class="modal-body">

      <form class="form-horizontal">

        <div class="form-group">
          <label for="inputUsername" class="col-sm-3 control-label">Select Date</label>
          <div class="col-sm-7">
            <%= text_field_tag :appointment_date,nil, :class =>"form-control datepicker",:id =>"inputUsername", :placeholder => "Date" %>
          </div>
          <div class="col-sm-2"></div>
        </div>

        <div class="form-group">
          <!-- <label for="inputPassword" class="col-sm-3 control-label">Password</label> -->
          <div class="col-sm-7">
            <%#= password_field_tag :password,nil, :class =>"form-control",:id =>"inputPassword",:placeholder => "Password" %>
          </div>
          <div class="col-sm-2"></div>
        </div>
      </div>

      <div class="modal-footer">
        <%= submit_tag "Next", :class =>"btn btn-primary ok-btn-padding" %>
        <!-- <button type="button" class="btn btn-primary ok-btn-padding" data-dismiss="modal">Next</button> -->
        <br></br>
        <center>

          <!-- facebook log in Button trigger modal -->

        </center>
      </div>

      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
   $('.datepicker').datepicker({ minDate: 0,maxDate: "+30d" });
  });
</script>